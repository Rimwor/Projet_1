{% extends 'base.html.twig' %}

{% block title %}Hello TaskController!
{% endblock %}

{% block body %}

	<div class="container">
		<table class="table table-striped table-border" id="tasksTable">
			<thead>
				<th>Id</th>
				<th>Nom</th>
				<th>Description</th>
				<th>Date effective</th>
			</thead>
			<tbody>
				{% if tasks is defined %}
					{% for task in tasks %}
						<tr>
							<th scope="row">{{ task.id }}</th>
							<td>{{ task.name }}</td>
							<td>{{ task.description }}</td>
							<td>{{ task.dueAt | date('d/m/Y H:i') }}</td>
						</tr>
					{% endfor %}
				{% endif %}
			</tbody>
		</table>
	</tbody>
</div>{% endblock %}
